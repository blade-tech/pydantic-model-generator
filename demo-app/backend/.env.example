# ==========================================
# Demo App Environment Variables
# ==========================================
# Copy this file to .env and fill in your real API keys
# DO NOT commit .env to version control

# ==========================================
# AI API Keys (REQUIRED)
# ==========================================

# Anthropic Claude API Key
# Get yours at: https://console.anthropic.com/
# Used for: Steps 2-6 (Ontology research, OutcomeSpec, LinkML, reasoning)
ANTHROPIC_API_KEY=sk-ant-api03-your-key-here

# OpenAI API Key
# Get yours at: https://platform.openai.com/api-keys
# Used for: Graphiti entity extraction
OPENAI_API_KEY=sk-your-key-here

# ==========================================
# Neo4j Connection (REQUIRED for Step 6)
# ==========================================

# Neo4j URI (default for local instance)
NEO4J_URI=neo4j://localhost:7687

# Neo4j Username (default)
NEO4J_USER=neo4j

# Neo4j Password (set during Neo4j setup)
NEO4J_PASSWORD=your-neo4j-password-here

# ==========================================
# Pydantic Library Path (REQUIRED)
# ==========================================

# Absolute path to pydantic_library directory
# Default assumes demo-app is sibling to pydantic_library
PYDANTIC_LIBRARY_PATH=../pydantic_library

# ==========================================
# FastAPI Configuration (OPTIONAL)
# ==========================================

# API Host
API_HOST=0.0.0.0

# API Port
API_PORT=8000

# CORS Origins (comma-separated)
# Default allows Next.js dev server
# For production, add your Railway frontend URL:
# CORS_ORIGINS=http://localhost:3000,http://localhost:3001,https://your-frontend.up.railway.app
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# ==========================================
# Claude Configuration (OPTIONAL)
# ==========================================

# Claude Model
CLAUDE_MODEL=claude-3-5-sonnet-20241022

# Max Tokens for Claude
CLAUDE_MAX_TOKENS=4096

# Temperature (0.0 - 1.0)
CLAUDE_TEMPERATURE=0.7

# ==========================================
# Logging (OPTIONAL)
# ==========================================

# Log Level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# ==========================================
# Development Mode (OPTIONAL)
# ==========================================

# Enable debug mode
DEBUG=true

# ==========================================
# NOTES
# ==========================================
# 1. This app requires REAL API keys - no mocks
# 2. Neo4j must be running before starting Step 6
# 3. Pydantic library path must be writable
# 4. All API calls use real services (Claude, OpenAI, Neo4j)
