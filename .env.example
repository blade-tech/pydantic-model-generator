# LLM / Instructor
LLM_PROVIDER=anthropic
OPENAI_API_KEY=
ANTHROPIC_API_KEY=

# Ontology fetchers (optional; offline mode works without these)
EXA_API_KEY=
FIRECRAWL_API_KEY=

# Graph layer (optional for mock)
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASS=password

# Observability (optional)
LANGFUSE_HOST=
LANGFUSE_PUBLIC_KEY=
LANGFUSE_SECRET_KEY=
LANGFUSE_RELEASE=demo-v0

# Feature flags
USE_LLAMA_INDEX_SPLITTERS=false
USE_LANGFUSE=false
OFFLINE_MODE=true
USE_MOCK_GRAPHITI=true

# Evaluation thresholds (configurable)
RECALL_AT_K_THRESHOLD=0.9
GAR_THRESHOLD=0.9
COVERAGE_THRESHOLD=0.98
K_VALUE=8
